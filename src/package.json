{
	"name": "checker-framework",
	"displayName": "Checker Framework",
	"description": "Checker Framework Extension for VS Code",
	"version": "0.0.1",
	"icon": "images/icon.png",
	"publisher": "nadouamanda",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nadouamanda/checkerframework-vscode-extension"
	},
	"bugs": "https://github.com/nadouamanda/checkerframework-vscode-extension/issues",
	"engines": {
		"vscode": "^1.5.0"
	},
	"galleryBanner": {
		"color": "#da2f30",
		"theme": "dark"
	},
	"keywords": [
		"java",
		"type",
		"checker",
		"javac"
	],
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:java"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Checker Framework configuration",
			"properties": {
				"checker-framework.enable": {
					"type": "boolean",
					"default": true,
					"description": "enable/disable the checker framework without restart."
				},
				"checker-framework.checkers": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "List of checkers enabled for compilation. More details in: https://checkerframework.org/manual/#running"
				},
				"chacker-framework.maxNumberOfProblems": {
					"type": "number",
					"default": 20,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"checker-framework.javac": {
					"type": "string",
					"default": "javac",
					"description": "Location of Java compiler executable."
				},
				"checker-framework.classpath": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Location of Java classpath, first path is used as class destination."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.7.2",
		"vscode": "^1.1.10",
		"mocha": "^3.5.0",
		"@types/node": "^8.0.26",
		"@types/mocha": "^2.2.42"
	}
}
