{
	"name": "checker-framework",
	"displayName": "Checker Framework",
	"description": "Checker Framework Extension for VS Code",
	"version": "0.0.1",
	"icon": "images/icon.png",
	"publisher": "nadouamanda",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/adamyy/checkerframework-lsp"
	},
	"bugs": "https://github.com/adamyy/checkerframework-lsp/issues",
	"engines": {
		"vscode": "^1.18.x"
	},
	"galleryBanner": {
		"color": "#da2f30",
		"theme": "dark"
	},
	"keywords": [
		"java",
		"type",
		"checker",
		"javac"
	],
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:java"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Checker Framework configuration",
			"properties": {
				"checker-framework.enable": {
					"type": "boolean",
					"default": true,
					"description": "enable/disable the checker framework without restart."
				},
				"checker-framework.checkers": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"org.checkerframework.checker.nullness.NullnessChecker"
					],
					"description": "List of checkers enabled for compilation. More details in: https://checkerframework.org/manual/#running"
				},
				"checker-framework.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"checker-framework.frameworkpath": {
					"type": "string",
					"default": "",
					"description": "Absolute path of the Checker Framework."
				},
				"checker-framework.tempOutputDir": {
					"type": "string",
					"default": "build/tmp/checkerframework",
					"description": "Relative path of the directory for storing temporary output files."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.7.2",
		"vscode": "^1.1.12",
		"mocha": "^3.5.0",
		"@types/node": "^8.0.26",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"vscode": "^1.1.12",
		"vscode-languageclient": "^4.0.0"
	}
}
